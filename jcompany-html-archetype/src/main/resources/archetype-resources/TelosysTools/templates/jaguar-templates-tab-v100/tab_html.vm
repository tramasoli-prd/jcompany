<div class="container-fluid">
<form name="form" class="form-validate">
	<div class="panel .panel-default">
		<div class=".panel-heading"> {{ 'label.${uncapitalizedEntityName}.titulo' | translate }} </div>
	</div>
	<div class="row header" >
        <div class="col-md-2">
            <label>Sigla</label>
            
        </div>

        <div class="col-md-6">
           
            <label>Nome</label>
			
        </div>

	</div>
	<div class="row" ng-repeat="${fn.uncapitalize($entity.name)} in rows" plc-finish-render>

		<div class="col-md-2">
			<input type="text" ng-model="${fn.uncapitalize($entity.name)}.sigla" 		class="form-control">
			<input type="hidden" ng-model="${fn.uncapitalize($entity.name)}.id" >
		    
		</div>

		<div class="col-md-6">    
			<input type="text" ng-model="${fn.uncapitalize($entity.name)}.nome" class="form-control">     
		</div>

		<div class="col-sd-2">

		   	<button type="submit" class="btn btn-primary" ng-click="${fn.uncapitalize($entity.name)}Controller.saveRow(${dollarSymbol}index);" >
			  <i class="glyphicon glyphicon-save-file"></i>
			</button>

			<button type="submit" class="btn btn-danger" ng-click="${fn.uncapitalize($entity.name)}Controller.removeRow(${dollarSymbol}index);"  ng-if="${fn.uncapitalize($entity.name)}.id">
			  <i class="glyphicon glyphicon-erase"></i>
			</button>
		</div>
	</div>
	<br/>
</form>
</div>
